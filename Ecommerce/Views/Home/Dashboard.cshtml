@model List<Ecommerce.Models.Entities.User>
@{
    Layout = "Dashboard/_Dashboard";
}
<div>
    <h2>Dashboard</h2>
</div>

<table class="table text-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Image))
                    {
                        <img src="~/UserImages/@item.Image" width="50" height="50" asp-append-version="true" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td><a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-primary">Edit</a></td>
                <td><a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
            </tr>
        }
      
       
    </tbody>
</table>


